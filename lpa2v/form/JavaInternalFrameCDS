    private void ButtonInsertActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        String name = NAPGCR_PROP_NAME.getText();
        //float μ = Float.parseFloat(NAPGCR_IMPUT_1.getText());
        //float μ2 = Float.parseFloat(NAPGCR_IMPUT_2.getText());
        if( name!="" ){
            CSD csd = new NAP();
            RAP rap = new RAP();
            rap.addNAP((NAP) csd);
            JOptionPane.showMessageDialog(null, "Topolog CSD Interface Saved!");
        }
    }                                            


