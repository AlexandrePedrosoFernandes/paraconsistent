    private void jButtonCancelActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        jTextField_Modeler_ID.setText("");
        jTextField_Modeler_Name.setText("");
        jTextField_a1.setText("");
        jTextField_a2.setText("");
        jTextField_Modeler_ID.setEnabled(false);
        jTextField_Modeler_Name.setEnabled(false);
        jTextField_a1.setEnabled(false);
        jTextField_a2.setEnabled(false);
        jButtonEdit.setEnabled(false);
        jButtonInsert.setEnabled(false);
        jButtonSeek.setEnabled(true);
        jButtonCancel.setEnabled(false);
        jButtonStart.setEnabled(true);
        jButtonExit.setEnabled(true);
    }                                             

    private void jButtonInsertActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        String name = "";
        //float a1 = (float)0;
        //float a2 = (float)0;
        name = jTextField_Modeler_Name.getText();
        float a1 = Float.parseFloat(jTextField_a1.getText());
        float a2 = Float.parseFloat(jTextField_a2.getText());
        if( name!="" ){
            Modeler mod = new Modeler(name,a1,a2);
            RAP rap = new RAP();
            rap.addModeler(mod);
            JOptionPane.showMessageDialog(null, "Modeler Saved!");
            jTextField_Modeler_ID.setText("");
            jTextField_Modeler_Name.setText("");
            jTextField_a1.setText("");
            jTextField_a2.setText("");
            jTextField_Modeler_ID.setEnabled(false);
            jTextField_Modeler_Name.setEnabled(false);
            jTextField_a1.setEnabled(false);
            jTextField_a2.setEnabled(false);
            jButtonEdit.setEnabled(false);
            jButtonInsert.setEnabled(false);
            jButtonSeek.setEnabled(false);
            jButtonCancel.setEnabled(false);
            jButtonStart.setEnabled(true);
            jButtonExit.setEnabled(true);
        } else
            JOptionPane.showMessageDialog(null, "Fill in the blanks to Insert, operation canceled!");
    }                                             

    private void jButtonSeekActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        jTextField_Modeler_ID.setEnabled(false);
        jTextField_Modeler_Name.setEnabled(true);
        String name = jTextField_Modeler_Name.getText();
        RAP rap = new RAP();
        Modeler mod = new Modeler();
        mod=rap.getModeler(name);
        int id = mod.getModelerID();
        String sA1 = Float.toString(mod.getA1());
        String sA2 = Float.toString(mod.getA2());
        jTextField_Modeler_ID.setText(String.valueOf(id));
        jTextField_Modeler_Name.setText(mod.getModelerName());
        jTextField_a1.setText(sA1);
        jTextField_a2.setText(sA2);
        JOptionPane.showMessageDialog(null, "Modeler Open!");
        jTextField_Modeler_ID.setEnabled(false);
        jTextField_Modeler_Name.setEnabled(false);
        jTextField_a1.setEnabled(false);
        jTextField_a2.setEnabled(false);
        jButtonEdit.setEnabled(true);
        jButtonInsert.setEnabled(false);
        jButtonSeek.setEnabled(false);
        jButtonCancel.setEnabled(true);
        jButtonStart.setEnabled(false);
        jButtonExit.setEnabled(true);
        /*} else
            JOptionPane.showMessageDialog(null, "Trere is No Modeler Name to Open, abort !");
            */
    }                                           

